<style>
  #myProgress {
    width: 100%;
    background-color: rgb(255, 255, 255);
    position: fixed;
    top: 0;
  }

  #myBar {
    width: 1%;
    height: 5px;
    background-color: #28a745;
  }
</style>
<div id="myProgress">
  <div id="myBar"></div>
</div>

<script>
  var i = 0;
  (function () {
    if (i == 0) {
      i = 1;
      var elem = document.getElementById("myBar");
      var width = 1;
      var id = setInterval(frame, 10);
      function frame() {
        if (width >= 50) {
          clearInterval(id);
          i = 0;
          elem.style.display = 'none'
        } else {
          width++;
          elem.style.width = width + "%";
        }
      }
    }
  })()
</script>