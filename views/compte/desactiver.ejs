<div class="row">
  <%- include('avatar') -%>
  <% if(locals.userInfo) { %>
  <div class="col-md-9">
    <form class="form-desac bg-light p-0 mb-3" id="form-desac">
      <div class="form-group">
        <label for="password">mot de passe</label>
        <input type="password" class="form-control" name="password" pattern="[A-Za-z0-9 #-]{6,}" placeholder="Saisissez votre mot de passe" required>
        <p class="text-muted font-s14 p-0 m-0 mt-2">Si vous rencontrez des problèmes, veuillez contacter notre Service Client.</p>
        <p class="text-muted font-s14 p-0 m-0">Visitez notre page <a class="font-s14" href="/contact">Contact</a>
        </p>
      </div>
      <button type="submit" class="btn btn-dark" id="btn-desactiver">désactiver</button>
      <button type="reset" class="btn btn-danger">vider</button>
    </form>
    <div id="msg-desc"></div>
  </div>
  <% } %>
</div><!-- end row -->
<script src="/javascripts/lib/alert.js"></script>
<script src="/javascripts/pages/desactiver.js" defer></script>