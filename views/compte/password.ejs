<div class="row">
  <%- include('avatar') -%>
  <% if(locals.userInfo) { %>
  <div class="col-md-9">
    <form class="bg-light p-0 mb-3" id="form-pass">

      <div class="form-group">
        <label for="password">ancien mot de passe</label>
        <input type="password" class="form-control" name="ancien" id="ancien" pattern="[A-Za-z0-9 #-]{6,}"
          title="Au minimul 6 letters : letters, nombres, charactere spéciaux : # _ -"
          placeholder="Entrer votre ancien mot de passe" required>
      </div>

      <div class="form-group">
        <label for="npassword">nouveau mot de passe</label>
        <input type="password" class="form-control" name="npassword" id="npassword" pattern="[A-Za-z0-9 #-]{6,}"
          title="Au minimul 6 letters : letters, nombres, charactere spéciaux : # _ -"
          placeholder="Entrer votre nouveau mot de passe" required>
      </div>

      <div class="form-group mb-4">
        <label for="conf-password">confirmer mot de passe</label>
        <input type="password" class="form-control" name="confpassword" id="confpassword" pattern="[A-Za-z0-9 #-]{6,}"
          title="Au minimul 6 letters : letters, nombres, charactere spéciaux : # _ -"
          placeholder="Confirmer votre nouveau mot de passe" required>
      </div>

      <button type="submit" class="btn btn-dark" id="btn-submit-pass"><i class="fas fa-user-edit"></i> mettre àjour</button>
      <button type="reset" class="btn btn-danger">vider</button>
    </form>
    <div id="msg-ch-pass"></div>
  </div>
  <% } %>
</div><!-- end row -->
<script src="/javascripts/pages/change-pass.js" defer></script>