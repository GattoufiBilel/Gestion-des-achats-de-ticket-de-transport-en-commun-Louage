<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>
<div class="container-fluid py-6">
  <div class="container">
    <%- include('../navbar') -%>
    <% if(locals.voyages) {  %>
      <div class="head-table w-100">
        <h3 class="w-50 mb-0"><i class="fas fa-cogs"></i> Gestion des voyages</span></h3>
        <div class="d-flex flex-row-reverse bd-highlight w-50">
          <button onclick="tableToExcel('myTable')" class="btn btn-dark"><i class="fas fa-file-excel"></i> EN Excel</button>
          <a href="/chefstation/voyages/ajout" class="btn btn-success mr-3"><i class="fas fa-plus"></i> Ajouter</a>
        </div>
      </div>
    <div class="table-responsive mb-3">
      <table class="table table-hover" id="myTable">
        <thead>
          <tr>
            <th>départ</th>
            <th>arrivée</th>
            <th>h° Depart</th>
            <th>h° arrivée</th>
            <th>d° Départ</th>
            <th>prix Place</th>
            <th>n° Places</th>
            <th>n° serie</th>
            <th>action</th>
          </tr>
        </thead>
        <tbody>
          <% voyages.forEach(u => {  %>
          <tr>
            <td><%= nom_station %></td>
            <td><%= u.arrive %></td>
            <td><%= u.heure_depart %>h</td>
            <td><%= u.heure_arrive %>h</td>
            <td><%= u.date_depart %></td>
            <td><%= u.prix_place %> DNT</td>
            <td><%= u.nb_places %></td>
            <td><%= u.num_serie %></td>
            <td>
              <a href="/chefstation/voyages/modifier?v=<%= u.uid_voyage %>" class="btn btn-success btn-dismiss"><i
                  class="fas fa-pen-square"></i></a>
              <a href="/chefstation/voyages/supprimer?voyage=<%= u.uid_voyage %>" class="btn btn-danger btn-delete"><i
                  class="fas fa-trash-alt"></i></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>
<script src="/javascripts/lib/alert.js"></script>
<script src="/javascripts/delete.js" defer></script>
<%- include('../../partials/footer.ejs') -%>